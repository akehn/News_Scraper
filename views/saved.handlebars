<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Medium Scraper</title>
    
    <!-- CSS  -->
      <link href="assets/css/bootstrap.min.css" type="text/css" rel="stylesheet" media="screen,projection">
    <link href="assets/css/saved.css" type="text/css" rel="stylesheet" media="screen,projection">
</head>

<!-- Navigation -->
<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/">Anthonys Article Scraper</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive"
            aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link active" id="logo" href="#saved-articles">Saved Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-3">Saved Medium Articles</h1>
        <p class="lead">You can add notes or remove your articles</p>
    </div>
</div>

<div class="ui column stackable grid centered" id="articles">
    {{#each articles}}
    <!-- Modal -->
    <div class="modal" id="modal-{{_id}}">
        <div class="modal-sandbox"></div>
        <div class="modal-box">
            <div class="modal-header">
                <div class="close-modal">&#10006;</div>
                <h3>Notes for : {{headline}}</h3>
            </div>
            <div class="modal-body" data-id="{{_id}}">
                <textarea class='bodyinput' name='body'></textarea>
                <div class="ui right segment one column" id="notes"></div>
                <div class="ui buttons">
                    <button data-id="{{_id}}" class="ui button positive save-note">Save Note</button>
                    <div class="or"></div>
                    <button class="ui button close-modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    {{!-- Each article will fit into a card--}}
    <div class="ui card">
        <a href={{url}} target="_blank">
            <div class="image">
                <img class="ui centered medium image" src={{imgURL}} alt={{headline}} id="img-{{_id}}" />
            </div>
            <div class="content">
                <p class="header">{{headline}}</p>
        </a>
        {{!-- Ribbon used to access the notes--}}
        <div class="ui raised ">
            <a data-id={{_id}} data-modal="modal-{{_id}}" class="ui green right ribbon label modal-trigger addNote centered">Add notes!</a>
        </div>
        <div class="description">
            {{summary}}
        </div>
        </div>
        <div class="extra content">
            <div data-id={{_id}} class="ui animated inverted violet button removeSaved" tabindex="0">
                <div class="visible content">Remove From Saved</div>
                <div class="hidden content">
                    <i class="left arrow icon"></i>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<script src="/assets/js/saved.js"></script>